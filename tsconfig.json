{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": false,
    "strictNullChecks": false,
    "outDir": "./app",
    "lib": ["es2015", "dom"]
  },
  "files": [
    "./src/app.ts",
    "./src/main.ts",
    "./src/translation_project.ts",
    "./src/srtmanager.ts",
    "./src/srtobject.ts",
    "./src/subtitletree.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
